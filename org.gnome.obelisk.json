{
    "id" : "org.gnome.obelisk",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "obelisk",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=host",
	"--talk-name=org.freedesktop.Flatpak"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
                {
            "name" : "fast_float",
            "buildsystem" : "cmake-ninja",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/fastfloat/fast_float.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "simdutf",
            "buildsystem" : "cmake-ninja",
            "config-opts" : [
                "-DCMAKE_CXX_VISIBILITY_PRESET=hidden",
                "-DCMAKE_POSITION_INDEPENDENT_CODE=TRUE",
                "-DCMAKE_VISIBILITY_INLINES_HIDDEN=TRUE"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/simdutf/simdutf.git",
                    "branch" : "master"
                }
            ]
        },
	{
            "name": "vte",
            "buildsystem": "meson",
            "config-opts": [
                "-Dglade=false",
                "-Dgtk3=false",
                "-Dgtk4=true",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/vte.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name" : "obelisk",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/simhof/Projects"
                }
            ]
        }
    ]
}
