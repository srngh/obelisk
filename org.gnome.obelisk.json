{
    "id" : "org.gnome.obelisk",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "obelisk",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=host-os",
	"--talk-name=org.freedesktop.Flatpak"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	"python3-pyyaml.json",
    	"python3-paramiko.json",
    	{
            "name" : "fast_float",
            "buildsystem" : "cmake-ninja",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/fastfloat/fast_float.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "simdutf",
            "buildsystem" : "cmake-ninja",
            "config-opts" : [
                "-DCMAKE_CXX_VISIBILITY_PRESET=hidden",
                "-DCMAKE_POSITION_INDEPENDENT_CODE=TRUE",
                "-DCMAKE_VISIBILITY_INLINES_HIDDEN=TRUE"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/simdutf/simdutf.git",
                    "branch" : "master"
                }
            ]
        },
	{
            "name": "vte",
            "buildsystem": "meson",
            "config-opts": [
                "-Dglade=false",
                "-Dgtk3=false",
                "-Dgtk4=true",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/vte.git",
                    "branch": "master"
                }
            ]
        },
	{
            "name": "host-spawn",
            "buildsystem": "simple",
            "build-commands": [
            	"install -Dm0744 host-spawn -t ${FLATPAK_DEST}/bin/" ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/1player/host-spawn/releases/download/v1.6.1/host-spawn-x86_64",
                    "sha256": "733746ab498e07d065cbecf80bacd447eb21846d1462e8fe23fdd9d9dc977b50",
                    "dest-filename": "host-spawn",
                    "only-arches": [
                    	"x86_64"
                    ]
                }
            ]
        },
        {
            "name" : "obelisk",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/simhof/Projects"
                }
            ]
        }
    ]
}
